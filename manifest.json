{
  "manifest_version": 3,
  "name": "NovelSynth",
  "version": "1.0.0",
  "author": "VKrishna04",
  "homepage_url": "https://life-experimentalist.github.io/novelsynth",
  "repository": {
    "type": "git",
    "url": "https://github.com/LifeExperimentalist/novelsynth"
  },
  "license": "Apache-2.0",
  "short_name": "NovelSynth",
  "description": "AI-powered content enhancement for web novels, articles, and long-form content",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "NovelSynth",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "NovelSynth",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "*.css",
        "*.js",
        "*.png",
        "*.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}