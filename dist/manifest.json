{
  "manifest_version": 3,
  "name": "NovelSynth",
  "version": "1.0.0",
  "author": "VKrishna04",
  "homepage_url": "https://life-experimentalist.github.io/novelsynth",
  "short_name": "NovelSynth",
  "description": "AI-powered content enhancement for web novels, articles, and long-form content",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "NovelSynth",
    "default_icon": {
      "16": "src/icons/icon16.png",
      "32": "src/icons/icon32.png",
      "48": "src/icons/icon48.png",
      "128": "src/icons/icon128.png"
    }
  },
  "icons": {
    "16": "src/icons/icon16.png",
    "32": "src/icons/icon32.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}